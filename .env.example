# Configuración de la aplicación
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# Configuración del servidor
HOST=0.0.0.0
PORT=8000

# Base de datos
MONGODB_URL=mongodb://localhost:27017/calorie_calculator
REDIS_URL=redis://localhost:6379

# Rutas de archivos
MODEL_PATH=resources/models/breakfast_cnn_model.h5
NUTRITION_DB_PATH=resources/data/nutrition_database.json

# Configuración de ML
MAX_IMAGE_SIZE=10485760
ALLOWED_IMAGE_FORMATS=jpeg,jpg,png
CONFIDENCE_THRESHOLD=0.5

# Seguridad
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Configuración de monitoreo (opcional)
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Configuración de logging
LOG_FILE_PATH=logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30